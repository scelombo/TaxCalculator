@page
@model TaxCalculator.Pages.Tax.TaxRegionsModel

<div class="text-center">
    <h5 class="display-5 text-primary medium"><b> Tax <span class="text-danger"> Region </span> Configuration </b></h5>
    <h6 class="display-6 text-muted small"><b><span class="text-success">PAY</span>SPACE</b><a href="https://www.payspace.com/" target="_blank"> Check us online</a></h6>
    <hr />
    <h6 class="display-6 text-info small"><b># @Model?.region?.Id | @Model?.region?.Name | @Model?.region?.PostalCode | @Model?.region?.CalculationType?.Name</b></h6>
    <hr />
    <br />
</div>

<div class="form-row">
    <div class="col-3 pull-left">
        <h5 class="text-info">From Amt </h5>
    </div>
    <div class="col-3 pull-left">
        <h5 class="text-info">To Amt</h5>
    </div>
    <div class="col-3 pull-left">
        <h5 class="text-info">Rate</h5>
    </div>
    <div class="col-2 pull-left">
        <h5 class="text-info">Type</h5>
    </div>
    <div class="col-1 pull-right">
        <h5 class="text-info pull-right"> ######</h5>
    </div>
</div>
<form id="TaxRegion" class="form-row" method="post" autocomplete="off">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="col-3">
        <input type="text" class="form-control" asp-for="regionTax.FromAmount">
        <span asp-validation-for="regionTax.FromAmount" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <input type="text" class="form-control" asp-for="regionTax.ToAmount">
        <span asp-validation-for="regionTax.ToAmount" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <input type="text" class="form-control" asp-for="regionTax.Rate">
        <span asp-validation-for="regionTax.Rate" class="text-danger"></span>
    </div>
    <div class="col-2">
        <select id="inputState" class="form-control" asp-for="regionTax.RateType">
            <option value="" selected></option>
            <option value="1">Percent</option>
            <option value="2">Value</option>
        </select>
        <span asp-validation-for="regionTax.RateType" class="text-danger"></span>
    </div>
    <div class="form-group col-md-1 pull-right">
        <input type="submit" value="Save" class="btn btn-primary form-control" />
    </div>
</form>

<div class="col-12 border p-3">
    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Rate</th>
                <th>Type</th>
                <th>From Amount</th>
                <th>To Amount</th>
                <th>Options</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
    <script src="~/js/regionTaxes.js"></script>
}
