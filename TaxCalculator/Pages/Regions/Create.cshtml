@page
@model TaxCalculator.Pages.Regions.CreateModel

    <div class="text-center">

        <h5 class="display-5 text-primary medium"><b> Create Region</b></h5>
        <h6 class="display-6 text-muted small"><b><span class="text-success">PAY</span>SPACE</b><a href="https://www.payspace.com/" target="_blank"> Check us online</a></h6>
        <hr />
        <br />

        <div id="container">
            <form method="post" autocomplete="off">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="price-box">
                    <div class="">
                        <div class="row">
                            <h4 class="great">&nbsp;Region Name</h4>
                            <span> &nbsp;&nbsp;&nbsp;&nbsp;</span>
                            <div class="btn-group btn-group-justified">
                                <div class="btn-group btn-group-lg">
                                    <input asp-for="region.Name" class="form-control" />
                                </div>
                                <span asp-validation-for="region.Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <h4 class="great">&nbsp; &nbsp; Postal Code</h4>
                            <span> &nbsp;&nbsp;&nbsp;&nbsp; </span>
                            <div class="btn-group btn-group-justified">
                                <div class="btn-group btn-group-lg">
                                    <input asp-for="region.PostalCode" class="form-control" />
                                </div>
                                <span asp-validation-for="region.PostalCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <h4 class="great">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Type of Tax</h4>
                            <span> &nbsp;&nbsp;&nbsp;&nbsp; </span>
                            <div class="btn-group btn-group-justified">
                                <div class="btn-group btn-group-lg">
                                    <select class="form-control btn-group-lg" style="min-width:200px;" asp-for="region.CalculationTypeId" asp-items="@(new SelectList(Model.calculationTypes, "Id", "Name"))">
                                        <option value=""></option>
                                    </select>
                                </div>
                                <span asp-validation-for="region.CalculationTypeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-3 offset-1">
                                <input type="submit" value="Create" class="btn btn-primary form-control" />
                            </div>
                            <div class="col-3">
                                <a asp-page="Regions" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}